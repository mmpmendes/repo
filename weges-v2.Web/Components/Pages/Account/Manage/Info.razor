@page "/manage/info"
@using weges_v2.SharedKernel.Models

<h3>Manage Info</h3>
<EditForm Model="_manageInfoModel" OnValidSubmit="UpdateInfo">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>First Name:</label>
        <InputText @bind-Value="_manageInfoModel.FirstName" />
    </div>

    <div>
        <label>Last Name:</label>
        <InputText @bind-Value="_manageInfoModel.LastName" />
    </div>

    <div>
        <label>Email:</label>
        <InputText @bind-Value="_manageInfoModel.Email" />
    </div>

    <button type="submit">Update Info</button>
</EditForm>

