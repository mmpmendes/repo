@page "/formacao"
@using Identity.Components.Shared
@using Microsoft.AspNetCore.Authorization
@using SharedKernel.DTO
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Formação</PageTitle>

<Tabs>
    <Tab Title="Formação">
        <Content>
            <Grid @ref="FormacaoGrid"
                  TItem="FormacaoDTO"
                  Class="table table-hover table-bordered table-striped"
                  DataProvider="FormacaoDataProvider"
                  FiltersTranslationProvider="GridFiltersTranslation.GridFiltersTranslationProvider"
                  AllowPaging="true"
                  PageSize="10"
                  Responsive="true"
                  EmptyText="Sem dados para apresentar">
                <GridColumns>
                    <GridColumn TItem="FormacaoDTO" HeaderText="Nome" PropertyName="Nome" SortKeySelector="item => item.Nome">
                        @context.Nome
                    </GridColumn>
                    <GridColumn TItem="FormacaoDTO" HeaderText="Nº Identificação" PropertyName="NrIdentificacao" SortKeySelector="item => item.NrIdentificacao">
                        @context.NrIdentificacao
                    </GridColumn>
                    <GridColumn TItem="FormacaoDTO" HeaderText="Data de Nascimento" PropertyName="DataNascimento" SortKeySelector="item => item.DataNascimento">
                        @context.DataNascimento
                    </GridColumn>
                    <GridColumn TItem="FormacaoDTO" HeaderText="Início de Atividade" PropertyName="InicioAtividade" SortKeySelector="item => item.InicioAtividade">
                        @context.InicioAtividade
                    </GridColumn>
                    <GridColumn TItem="FormacaoDTO" HeaderText="Especialidade" PropertyName="Especialidade" SortKeySelector="item => item.Especialidade">
                        @context.Especialidade
                    </GridColumn>
                    <GridColumn TItem="FormacaoDTO" HeaderText="Estado" PropertyName="Estado" SortKeySelector="item => item.Estado">
                        @context.Estado
                    </GridColumn>
                    <GridColumn TItem="FormacaoDTO" HeaderText="Total Horas formação" PropertyName="TotalHoras" SortKeySelector="item => item.TotalHoras">
                        @context.TotalHoras
                    </GridColumn>
                    <GridColumn TItem="FormacaoDTO" HeaderText="Observações" PropertyName="Observacoes" SortKeySelector="item => item.Observacoes">
                        @context.Observacoes
                    </GridColumn>
                </GridColumns>
            </Grid>
        </Content>
    </Tab>
</Tabs>