    </Grid>
    </CardBody>
</Card>
<Card>
    <CardHeader>
        <h5> Parecer ANPC </h5>
    </CardHeader>
    <CardBody>
        <Grid @ref="PareceresAnpcGrid" 
            TItem="FicheirosLicenciamentoDTO"
                Class="table table-hover table-bordered table-striped"
                DataProvider="PareceresAnpcDataProvider"
