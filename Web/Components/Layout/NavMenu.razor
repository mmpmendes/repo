<Sidebar Href="/"
         ImageSrc="../images/weges_icone.png"
         Title="Weges"
         Class="weges-icon"
         DataProvider="SidebarDataProvider">

</Sidebar>

@code {
    private IEnumerable<NavItem>? navItems;
    private async Task<SidebarDataProviderResult> SidebarDataProvider(SidebarDataProviderRequest request)
    {
        if (navItems is null)
            navItems = GetNavItems();

        return await Task.FromResult(request.ApplyTo(navItems));
    }
    private IEnumerable<NavItem> GetNavItems()
    {
        navItems = new List<NavItem>
        {
            new NavItem { Id = "1" ,Href = "/", IconName = IconName.House, Text = "Início" },
            new NavItem { Id = "2" ,Href = "/estabelecimentos", IconName = IconName.Shop, Text = "Estabelecimentos" },
            new NavItem { Id = "3" ,Href = "/entidades", IconName = IconName.ShopWindow, Text = "Entidades" },
            new NavItem { Id = "4" , IconName = IconName.Gear, Text = "Back-Office" },
            new NavItem { Id = "5" ,Href = "/tipologias", IconName = IconName.ShopWindow, Text = "Tipologias", ParentId = "4" },
            // new NavItem { Href = "/login", IconName = IconName.Person, Text = "Entrar" }
        };

        return navItems;
    }
}